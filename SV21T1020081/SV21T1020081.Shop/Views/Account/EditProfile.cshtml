@model SV21T1020081.DomainModels.Customer
@{

}
<div class="box box-primary">
    <div class="box-body">
        <form action="~/Account/EditProfile" method="post">

            <input type="hidden" name="@nameof(Model.CustomerID)" value="@Model.CustomerID" />
            <div class="form-group">
                <label>Tên khách hàng:</label>
                <input type="text" class="form-control " autofocus name="@nameof(Model.CustomerName)" value="@Model.CustomerName">
                @Html.ValidationMessage(nameof(Model.CustomerName))
            </div>
            <div class="form-group">
                <label>Tên giao dịch</label>
                <input type="text" class="form-control" name="@nameof(Model.ContactName)" value="@Model.ContactName">
                @Html.ValidationMessage(nameof(Model.ContactName))
            </div>
            <div class="form-group">
                <label>Điện thoại</label>
                <input type="text" class="form-control" name="@nameof(Model.Phone)" value="@Model.Phone">
                @Html.ValidationMessage(nameof(Model.Phone))
            </div>
            <div class="form-group">
                <label>Email</label>
                <input type="email" class="form-control" name="@nameof(Model.Email)" value="@Model.Email">
                @Html.ValidationMessage(nameof(Model.Email))
            </div>
            <div class="form-group">
                <label>Địa chỉ</label>
                <input type="text" class="form-control" name="@nameof(Model.Address)" value="@Model.Address">
                @Html.ValidationMessage(nameof(Model.Address))
            </div>
            <div class="form-group">
                <label>Tỉnh thành</label>
                <select class="form-control" name="@nameof(Model.Province)">
                    <option value="">-- Chọn tỉnh/ Thành phố --</option>
                    @foreach (var item in SV21T1020081.BusinessLayers.CommonDataService.ListOfProvines())
                    {
                        if (item.ProvinceName == Model.Province)
                        {
                            <option value="@item.ProvinceName" selected>@item.ProvinceName</option>
                        }
                        else
                        {
                            <option value="@item.ProvinceName">@item.ProvinceName</option>
                        }
                    }

                </select>
                @Html.ValidationMessage(nameof(Model.Province))
            </div>


            <div class="form-group text-right">
                <button type="submit" class="btn btn-primary">
                    <i class="fa fa-floppy-o"></i>Chỉnh sửa
                </button>
                <a href="~/Product" class="btn btn-default">
                    Quay lại
                </a>
            </div>
        </form>

    </div>
</div>