@model SV21T1020081.DomainModels.Customer
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Le Si Thuan Shop - Đăng nhập</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <!-- Bootstrap 3.3.7 -->
    <link rel="stylesheet" href="~/themes/bower_components/bootstrap/dist/css/bootstrap.min.css">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="~/themes/bower_components/font-awesome/css/font-awesome.min.css">
    <!-- Ionicons -->
    <link rel="stylesheet" href="~/themes/bower_components/Ionicons/css/ionicons.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="~/themes/dist/css/AdminLTE.min.css">
    <!-- iCheck -->
    <link rel="stylesheet" href="~/themes/plugins/iCheck/square/blue.css">

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
    <!-- Google Font -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600,700,300italic,400italic,600italic">
</head>
<body class="hold-transition login-page">
    <div class="login-box">
        <div class="login-logo">
            <a><b>LST</b> Shop</a>
        </div>
        <!-- /.login-logo -->
        <div class="login-box">
            <p class="login-box-msg">Đăng kí tài khoản</p>

            <form method="post" action="~/Account/SignUp">
                <div class="row">
                    <div class="col">
                        <div class="form-group">
                            <label for="CustomerName">Họ và tên:</label>
                            <input type="text" id="CustomerName" name="CustomerName" class="form-control" required value="@Model.CustomerName" />
                        </div>
                        <div class="form-group">
                            <label for="Address">Địa chỉ:</label>
                            <input type="text" id="Address" name="Address" class="form-control" required value="@Model.Address" />
                        </div>
                        <div class="form-group">
                            <label for="Email">Email:</label>
                            <input type="email" id="Email" name="Email" class="form-control" required value="@Model.Email" />
                            @Html.ValidationMessage("Error",new { @style = "color:#f00" })
                        </div>

                    </div>
                    <div class="col">
                        <div class="form-group">
                            <label for="ContactName">Tên giao dịch:</label>
                            <input type="text" id="ContactName" name="ContactName" class="form-control" required value="@Model.ContactName" />
                        </div>


                        <div class="form-group">
                            <label for="Phone">Số điện thoại:</label>
                            <input type="text" id="Phone" name="Phone" class="form-control" required value="@Model.Phone" />
                        </div>

                    </div>
                    <div class="form-group">
                        <label>Tỉnh thành:</label>
                        <select class="form-control" name="@nameof(Model.Province)">
                            <option value="">
                                Chọn tỉnh thành
                            </option>
                            @foreach (var province in SV21T1020081.BusinessLayers.CommonDataService.ListOfProvines())
                            {
                                if (province.ProvinceName == Model.Province)
                                {
                                    <option selected value="@province.ProvinceName">@province.ProvinceName</option>
                                }
                                else
                                {
                                    <option value="@province.ProvinceName">@province.ProvinceName</option>
                                }

                            }
                        </select>
                        @Html.ValidationMessage(nameof(Model.Province))

                    </div>
                    <div class="col">
                        <div class="form-group">
                            <label for="Password">Mật khẩu:</label>
                            <input type="password" id="Password" name="password" class="form-control" required />
                        </div>
                        <div class="form-group">
                            <label for="ConfirmPassword">Xác nhận mật khẩu:</label>
                            <input type="password" id="ConfirmPassword" name="confirmPassword" class="form-control" required />
                        </div>
                        <br />
                    </div>
                    <div class="text-end">
                        <button type="submit" class="btn btn-primary">Đăng ký</button>
                        <a href="/" class="btn btn-danger">Hủy </a>
                    </div>
                </div>
            </form>

            <a href="~/Account/Login" class="text-center">Đã có tài khoản? Đăng nhập</a>
        </div>
        <!-- /.login-box-body -->
    </div>
    <!-- /.login-box -->
    <!-- jQuery 3 -->
    <script src="~/themes/bower_components/jquery/dist/jquery.min.js"></script>
    <!-- Bootstrap 3.3.7 -->
    <script src="~/themes/bower_components/bootstrap/dist/js/bootstrap.min.js"></script>
</body>
</html>

