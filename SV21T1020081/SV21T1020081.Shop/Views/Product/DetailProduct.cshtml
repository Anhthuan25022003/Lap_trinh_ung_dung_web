@model SV21T1020081.DomainModels.Product

<div class="container">
    <h2>Chi tiết sản phẩm</h2>
    <div class="row">
        <div class="col-sm-8  ">
            <img src="@WebConfig.IMAGE_SOURCE_HOST/images/products/@(string.IsNullOrWhiteSpace(Model.Photo) ? "trang1.jfif" : Model.Photo)"
                 alt="Ảnh sản phẩm" class="img-responsive img-bordered" style="max-width: 100%;" />


            <h2 style="color: blue; font-weight: bold;"> @Model.ProductName</h2>
            <p><strong>Mô tả:</strong> @Model.ProductDescription</p>
            <p><strong>Đơn vị tính:</strong> @Model.Unit</p>
            <p><strong>Giá:</strong> @Model.Price.ToString("N0") đ</p>
        </div>

    </div>
    <a href="~/Product" class="btn btn-primary">
        <i class="fa fa-arrow-left"></i> Quay lại
    </a>
</div>