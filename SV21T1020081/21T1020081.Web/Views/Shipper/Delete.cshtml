@model SV21T1020081.DomainModels.Shipper
@{
    ViewBag.Title = "Xóa Đơn Vị Giao Hàng";
}
<div class="box box-danger">
    <div class="box-body">
        <form action="~/Shipper/Delete/@Model.ShipperID" method="post">
            <div class="form-group">
                <label>Tên Đơn Vị Giao Hàng:</label>
                <p class="form-control-static">@Model.ShipperName</p>
            </div>
            <div class="form-group">
                <label>Điện Thoại:</label>
                <p class="form-control-static">@Model.Phone</p>

            </div>
            <div class="form-group text-right">
                @if (!SV21T1020081.BusinessLayers.CommonDataService.InUsedShipper(Model.ShipperID))
                {

                    <button type="submit" class="btn btn-danger">
                        <i class="fa fa-trash"></i> Xác nhận xoá
                    </button>
                }
                <a href="~/Customer" class="btn btn-default">
                    Quay lại
                </a>

            </div>

        </form>
    </div>

</div>
