@model SV21T1020081.DomainModels.ProductPhoto
@{
    // Ensure ProductID is available in the model or pass it as a ViewData/ViewBag property
    int productId = Model.ProductID; // Adjust if ProductID is in another model or context
}
<div class="box box-primary">
    <div class="box-body">
        <form class="form-horizontal" method="post" enctype="multipart/form-data" action="~/Product/SavePhoto">
            <input type="hidden" name="@nameof(Model.ProductID)" value="@Model.ProductID" />
            <input type="hidden" name="@nameof(Model.PhotoID)" value="@Model.PhotoID" />
            <div class="form-group">
                <label class="control-label col-sm-2">Chọn file ảnh:</label>
                <div class="col-sm-10">
                    <input type="file" class="form-control" name="_Photo" accept="image/*"
                           onchange="document.getElementById('Photo').src = window.URL.createObjectURL(this.files[0])" />
                </div>
            </div>

            <div class="form-group">
                <div class="col-lg-offset-2 col-sm-10">
                    <input type="hidden" name="Photo" value="@Model.Photo" />
                    <img id="Photo" src="~/images/products/@Model.Photo" class="img img-bordered" style="width:200px" />
                    @Html.ValidationMessage(nameof(Model.Photo))
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Mô tả:</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" name="@nameof(Model.Description)" value="@Model.Description" />
                    @Html.ValidationMessage(nameof(Model.Description))
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Thứ tự hiển thị:</label>
                <div class="col-sm-10">
                    <input type="number" class="form-control" name="@nameof(Model.DisplayOrder)" value="@Model.DisplayOrder" />
                    @Html.ValidationMessage(nameof(Model.DisplayOrder))
                </div>
            </div>

            <div class="form-group">
                <div class="col-lg-offset-2 col-sm-10">
                    <div class="checkbox">
                        <label>
                            <input type="checkbox" name="@nameof(Model.IsHidden)" value="@Model.IsHidden" /> Không hiển thị ảnh
                        </label>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="col-lg-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-primary">
                        <i class="fa fa-floppy-o"></i>
                        Lưu dữ liệu
                    </button>
                    <a href="~/Product/Edit/@productId" class="btn btn-default">
                        Quay lại
                    </a>
                </div>
            </div>

        </form>

    </div>
</div>